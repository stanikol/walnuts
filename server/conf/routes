# Routes
# This name defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.pages.ApplicationController.index
GET         /signOut                         controllers.pages.ApplicationController.signOut
GET         /authenticate/:provider          controllers.auth.SocialAuthController.authenticate(provider)

GET         /signUp                          controllers.auth.SignUpController.view
POST        /signUp                          controllers.auth.SignUpController.submit

GET         /signIn                          controllers.auth.SignInController.view
POST        /signIn                          controllers.auth.SignInController.submit

GET         /password/forgot                 controllers.auth.ForgotPasswordController.view
POST        /password/forgot                 controllers.auth.ForgotPasswordController.submit
GET         /password/reset/:token           controllers.auth.ResetPasswordController.view(token: java.util.UUID)
POST        /password/reset/:token           controllers.auth.ResetPasswordController.submit(token: java.util.UUID)
GET         /password/change                 controllers.auth.ChangePasswordController.view
POST        /password/change                 controllers.auth.ChangePasswordController.submit

GET         /account/email/:email            controllers.auth.ActivateAccountController.send(email: String)
GET         /account/activate/:token         controllers.auth.ActivateAccountController.activate(token: java.util.UUID)

# Map static resources from the /public folder to the /assets URL path
#GET         /assets/*name                    controllers.Assets.at(path="/public", name)
GET         /webjars/*name                   controllers.WebJarAssets.at(name)

#############################################
#           Images in database              #
#############################################
GET         /admin/img                      controllers.images.Images.showAdminImageForm(name: String ?= "")
POST        /admin/img                      controllers.images.Images.handleAdminImageForm
GET         /img/list                       controllers.images.Images.jsonAllImageInfo
GET         /gallery                        controllers.images.Images.showGallery
GET         /img/:name                      controllers.images.Images.getImage(name)
GET         /img/150x150/:name              controllers.images.Images.getThumbnail(name)
GET         /admin/albums                   controllers.nuts.AdminCategories.adminAlbumsCategories
POST        /admin/albums                   controllers.nuts.AdminCategories.adminAlbumsCategoriesHandle

#GET         /img/find                       controllers.images.Images.find
#POST        /img/edit                       controllers.images.Images.edit
#POST        /img/save                       controllers.images.Images.save



#############################################
#           Blog                            #
#############################################
GET         /index.php/article              controllers.nuts.Blog.showAllArticles
GET         /index.php/article/view/id/:id  controllers.nuts.Blog.article(id: Long)
GET         /blog/new                       controllers.nuts.Blog.create
GET         /blog/:id/edit                  controllers.nuts.Blog.edit(id: Long)
POST        /blog/submit                    controllers.nuts.Blog.onSubmit

#############################################
#           Comments                        #
#############################################
GET         /admin/comments                 controllers.nuts.Comments.commentsAdmin
POST        /admin/comments/add             controllers.nuts.Comments.addComment
POST        /admin/comments/editComment     controllers.nuts.Comments.editComment
GET         /comments/loginOrSignUp         controllers.nuts.Comments.loginOrSignUp

#############################################
#           Goods                           #
#############################################
GET         /items                          controllers.goods.Goods.listAllGoods
GET         /index.php/items/view/id/:id    controllers.goods.Goods.getGoodsItem(id: Long)
GET         /admin/item                     controllers.goods.Goods.showItemEditForm(id: Option[Long])
POST        /admin/item                     controllers.goods.Goods.itemEditFormHandle

GET         /admin/import-images            controllers.nuts.ImportData.importImages
GET         /admin/import-articles          controllers.nuts.ImportData.importArticles
GET         /admin/import-nuts              controllers.nuts.ImportData.importNuts
GET         /admin/import-all               controllers.nuts.ImportData.importAll

GET         /admin/cats                     controllers.nuts.AdminCategories.adminGoodsCategories
POST        /admin/cats                     controllers.nuts.AdminCategories.adminGoodsCategoriesHandle



GET         /assets/*name                    controllers.Assets.at(path="/public", name)